---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="SMS Platform - Wholesale A2P/P2A SMS Services | Nexge Technologies">
  <Navigation />
  
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-green-50 via-white to-green-100 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <div class="w-16 h-16 bg-green-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </div>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          SMS Platform
        </h1>
        <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
          Comprehensive wholesale SMS platform for A2P and P2A messaging with global carrier connectivity and enterprise-grade reliability.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="bg-green-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors shadow-lg">
            Request Demo
          </a>
          <a href="#features" class="border border-gray-300 text-gray-700 px-8 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-colors">
            View Features
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Overview Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">
            Global SMS Connectivity
          </h2>
          <p class="text-lg text-gray-600 mb-6">
            Our SMS platform provides comprehensive wholesale messaging services with direct carrier 
            connections worldwide. Support for A2P (Application-to-Person) and P2A (Person-to-Application) 
            messaging with advanced routing, delivery optimization, and real-time analytics.
          </p>
          <ul class="space-y-3">
            <li class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-gray-700">Global carrier connectivity</span>
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-gray-700">High-throughput messaging</span>
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-gray-700">Real-time delivery reports</span>
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-gray-700">Advanced analytics & reporting</span>
            </li>
          </ul>
        </div>
        <div class="bg-gradient-to-br from-green-50 to-blue-50 rounded-2xl p-8">
          <div class="grid grid-cols-2 gap-6">
            <div class="text-center">
              <div class="text-3xl font-bold text-green-600 mb-2">200+</div>
              <div class="text-sm text-gray-600">Countries</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-blue-600 mb-2">1000+</div>
              <div class="text-sm text-gray-600">Carrier Connections</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-purple-600 mb-2">10K+</div>
              <div class="text-sm text-gray-600">Messages/Second</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-orange-600 mb-2">99.9%</div>
              <div class="text-sm text-gray-600">Delivery Rate</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">SMS Services</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Comprehensive messaging solutions for every business need
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-white rounded-xl p-8 shadow-lg">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">A2P Messaging</h3>
          <p class="text-gray-600 mb-6">
            Application-to-Person messaging for enterprise communications, marketing campaigns, 
            notifications, and transactional messages with guaranteed delivery.
          </p>
          <ul class="space-y-2">
            <li class="flex items-center text-gray-700">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Bulk messaging campaigns
            </li>
            <li class="flex items-center text-gray-700">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Transactional notifications
            </li>
            <li class="flex items-center text-gray-700">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              OTP & verification codes
            </li>
            <li class="flex items-center text-gray-700">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Marketing & promotional SMS
            </li>
          </ul>
        </div>

        <div class="bg-white rounded-xl p-8 shadow-lg">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">P2A Messaging</h3>
          <p class="text-gray-600 mb-6">
            Person-to-Application messaging for interactive services, customer support, 
            surveys, and two-way communication platforms with intelligent routing.
          </p>
          <ul class="space-y-2">
            <li class="flex items-center text-gray-700">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Interactive customer support
            </li>
            <li class="flex items-center text-gray-700">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Surveys & feedback collection
            </li>
            <li class="flex items-center text-gray-700">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Voting & polling systems
            </li>
            <li class="flex items-center text-gray-700">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Chatbot integrations
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Platform Features</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Advanced features for reliable and scalable SMS delivery
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-gray-50 rounded-xl p-6">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Smart Routing</h3>
          <p class="text-gray-600">Intelligent message routing with fallback options and carrier optimization for maximum delivery rates.</p>
        </div>

        <div class="bg-gray-50 rounded-xl p-6">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Real-time Analytics</h3>
          <p class="text-gray-600">Comprehensive analytics dashboard with delivery reports, performance metrics, and campaign insights.</p>
        </div>

        <div class="bg-gray-50 rounded-xl p-6">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Security & Compliance</h3>
          <p class="text-gray-600">Enterprise-grade security with GDPR compliance, data encryption, and audit trails.</p>
        </div>

        <div class="bg-gray-50 rounded-xl p-6">
          <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">API Integration</h3>
          <p class="text-gray-600">RESTful APIs and SMPP connections for seamless integration with existing systems and applications.</p>
        </div>

        <div class="bg-gray-50 rounded-xl p-6">
          <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Scheduled Messaging</h3>
          <p class="text-gray-600">Advanced scheduling capabilities with timezone support and campaign automation features.</p>
        </div>

        <div class="bg-gray-50 rounded-xl p-6">
          <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Global Coverage</h3>
          <p class="text-gray-600">Worldwide SMS delivery with local number support and region-specific compliance features.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Use Cases Section -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Use Cases</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Versatile SMS solutions for various industries and applications
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white rounded-lg p-6 shadow-md">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Enterprise Communications</h3>
          <p class="text-gray-600">Internal notifications, alerts, and employee communications with guaranteed delivery.</p>
        </div>
        <div class="bg-white rounded-lg p-6 shadow-md">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Marketing Campaigns</h3>
          <p class="text-gray-600">Promotional messages, product launches, and customer engagement campaigns.</p>
        </div>
        <div class="bg-white rounded-lg p-6 shadow-md">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Authentication & Security</h3>
          <p class="text-gray-600">Two-factor authentication, OTP delivery, and security notifications.</p>
        </div>
        <div class="bg-white rounded-lg p-6 shadow-md">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Customer Support</h3>
          <p class="text-gray-600">Support ticket updates, appointment reminders, and service notifications.</p>
        </div>
        <div class="bg-white rounded-lg p-6 shadow-md">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Financial Services</h3>
          <p class="text-gray-600">Transaction alerts, account notifications, and fraud prevention messages.</p>
        </div>
        <div class="bg-white rounded-lg p-6 shadow-md">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Healthcare</h3>
          <p class="text-gray-600">Appointment reminders, medication alerts, and patient communication.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-green-600 to-blue-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Start Sending Messages Globally
      </h2>
      <p class="text-xl text-green-100 mb-8 max-w-2xl mx-auto">
        Connect with customers worldwide through our reliable SMS platform. Get started with our comprehensive messaging solutions today.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-white text-green-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors shadow-lg">
          Request Demo
        </a>
        <a href="mailto:sales@nexge.com" class="border border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-green-600 transition-colors">
          Contact Sales
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
