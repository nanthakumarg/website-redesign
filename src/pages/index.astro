  <!-- Solutions Section -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Solutions We Provide</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Comprehensive telecommunications solutions for every business need
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white rounded-lg p-6 shadow-md">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Wholesale VoIP</h3>
