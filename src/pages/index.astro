---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

// SEO and Structured Data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Nexge Technologies",
  "url": "https://nexge.com",
  "logo": "https://nexge.com/logo.png",
  "description": "Leading provider of high-density cloud communication platforms, VoIP solutions, SMS services, and value-added telecommunications services for service providers worldwide.",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "C/O Workflo by OYO, First Floor, Greeta Towers, No. 96-99, VS Industrial Estate",
    "addressLocality": "Perungudi",
    "addressRegion": "Chennai",
    "postalCode": "600096",
    "addressCountry": "IN"
  },
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+91",
    "contactType": "sales",
    "email": "sales@nexge.com"
  },
  "sameAs": [
    "https://linkedin.com/company/nexge-technologies",
    "https://twitter.com/nexgetech"
  ],
  "foundingDate": "2010",
  "numberOfEmployees": "50-100",
  "industry": "Telecommunications",
  "services": [
    "VoIP Solutions",
    "SMS Platform",
    "SoftSwitch Technology",
    "Value Added Services",
    "Telecommunications Infrastructure"
  ]
};
---

<Layout 
  title="Nexge Technologies - Enterprise VoIP, SMS & Telecommunications Solutions | 99.99% Uptime SLA"
  description="Leading provider of high-density cloud communication platforms. Enterprise VoIP SoftSwitch, global SMS services, and VAS solutions with 99.99% uptime SLA. Trusted by 500+ service providers worldwide."
  keywords="VoIP SoftSwitch, Enterprise Telecommunications, SMS Platform, C4 SoftSwitch, C5 SoftSwitch, Wholesale VoIP, Retail VoIP, VAS Solutions, Cloud Communications, Carrier Grade VoIP, SMS Gateway, Telecommunications Infrastructure"
  structuredData={structuredData}
>
  <Navigation />
  
  <!-- Hero Section -->
  <main id="main-content">
    <section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 via-white to-purple-50 overflow-hidden">
      <!-- Animated Background Elements -->
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
        <div class="absolute top-20 left-10 w-72 h-72 bg-blue-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob"></div>
        <div class="absolute top-40 right-10 w-72 h-72 bg-purple-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>
        <div class="absolute -bottom-8 left-20 w-72 h-72 bg-pink-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-4000"></div>
        
        <!-- Floating Elements -->
        <div class="absolute top-1/4 left-1/4 w-4 h-4 bg-blue-500 rounded-full opacity-30 animate-float"></div>
        <div class="absolute top-1/3 right-1/4 w-3 h-3 bg-purple-500 rounded-full opacity-40 animate-float animation-delay-1000"></div>
        <div class="absolute bottom-1/4 left-1/3 w-2 h-2 bg-pink-500 rounded-full opacity-50 animate-float animation-delay-2000"></div>
        <div class="absolute top-1/2 right-1/3 w-5 h-5 bg-indigo-500 rounded-full opacity-25 animate-float animation-delay-3000"></div>
      </div>
      
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-28 z-10">
        <div class="text-center">
          <!-- Trust Indicators -->
          <div class="flex justify-center items-center space-x-8 mb-8 opacity-60">
            <div class="flex items-center text-sm text-gray-600">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="font-medium">500+ Customers</span>
            </div>
            <div class="flex items-center text-sm text-gray-600">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="font-medium">99.99% Uptime</span>
            </div>
            <div class="flex items-center text-sm text-gray-600">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="font-medium">ISO Certified</span>
            </div>
          </div>
          
          <h1 class="text-5xl md:text-7xl lg:text-8xl font-black text-gray-900 mb-8 leading-tight animate-fade-in-up">
            <span class="block">High Density</span>
            <span class="block bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600 bg-clip-text text-transparent animate-gradient-x">
              Cloud Communications
            </span>
            <span class="block text-4xl md:text-5xl lg:text-6xl font-bold text-gray-700 mt-4">for Service Providers</span>
          </h1>
          
          <p class="text-xl md:text-2xl text-gray-600 mb-12 max-w-4xl mx-auto leading-relaxed animate-fade-in-up animation-delay-300">
            Enterprise-grade VoIP, SMS, and VAS solutions trusted by <strong>500+ service providers</strong> worldwide. 
            Scale your telecommunications infrastructure with our carrier-grade platforms.
          </p>
          
          <!-- Key Stats -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12 max-w-4xl mx-auto animate-fade-in-up animation-delay-600">
            <div class="text-center">
              <div class="text-3xl md:text-4xl font-bold text-blue-600 mb-2 counter" data-target="10">0</div>
              <div class="text-sm text-gray-600 font-medium">Million+ Sessions</div>
            </div>
            <div class="text-center">
              <div class="text-3xl md:text-4xl font-bold text-green-600 mb-2 counter" data-target="99.99">0</div>
              <div class="text-sm text-gray-600 font-medium">% Uptime SLA</div>
            </div>
            <div class="text-center">
              <div class="text-3xl md:text-4xl font-bold text-purple-600 mb-2 counter" data-target="200">0</div>
              <div class="text-sm text-gray-600 font-medium">+ Countries</div>
            </div>
            <div class="text-center">
              <div class="text-3xl md:text-4xl font-bold text-orange-600 mb-2 counter" data-target="24">0</div>
              <div class="text-sm text-gray-600 font-medium">/7 Support</div>
            </div>
          </div>
          
          <div class="flex flex-col sm:flex-row gap-6 justify-center animate-fade-in-up animation-delay-900">
            <a href="#products" class="group bg-gradient-to-r from-blue-600 to-purple-600 text-white px-10 py-4 rounded-xl font-bold text-lg hover:from-blue-700 hover:to-purple-700 transition-all duration-300 shadow-2xl hover:shadow-blue-500/25 transform hover:scale-105 hover:-translate-y-1">
              <span class="flex items-center justify-center">
                Explore Our Solutions
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </span>
            </a>
            <a href="/contact" class="group bg-white text-gray-800 px-10 py-4 rounded-xl font-bold text-lg border-2 border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-all duration-300 shadow-xl hover:shadow-2xl transform hover:scale-105 hover:-translate-y-1">
